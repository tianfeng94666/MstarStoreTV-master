<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_bg"
    android:orientation="vertical"
    >


    <include layout="@layout/title_layout"/>



    <LinearLayout
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="50dip">

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="注册用户名："
            android:gravity="center_vertical"
            />

        <EditText
            android:id="@+id/id_ed_name"
            android:layout_weight="1"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/text_color3"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/id_tv6"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="真实姓名："
            android:gravity="center_vertical"
            />

        <EditText
            android:id="@+id/id_ed_ername"
            android:layout_weight="1"
            android:layout_toRightOf="@+id/id_tv6"
            android:background="@null"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/text_color3"
            />

    </LinearLayout>



    <LinearLayout
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="50dip">

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="手机号码："
            android:gravity="center_vertical"
            />

        <EditText
            android:id="@+id/id_ed_phone"
            android:layout_weight="1"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/text_color3"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="50dip">

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="注册密码："
            android:gravity="center_vertical"
            />

        <EditText
            android:id="@+id/id_ed_password"
            android:layout_weight="1"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/text_color3"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="50dip">

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="确认密码："
            android:gravity="center_vertical"
            />

        <EditText
            android:id="@+id/id_ed_repassword"
            android:layout_weight="1"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/text_color3"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="手机验证码："
            android:gravity="center_vertical"
            />

        <EditText
            android:id="@+id/id_ed_code"
            android:layout_weight="1"
            android:layout_toRightOf="@+id/id_tv7"
            android:background="@null"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/text_color3"
            />

        <Button
            android:id="@+id/tv_get_auth_code"
            android:paddingLeft="15dip"
            android:paddingRight="15dip"
            android:layout_marginBottom="5dip"
            android:layout_marginTop="5dip"
            android:layout_marginRight="5dip"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="12sp"
            android:text="获取验证码"
            android:background="@drawable/frame_bg_while"
            />

    </LinearLayout>



    <CheckBox
        android:button="@drawable/radio_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="   是否升级为定制用户"
        android:textSize="15sp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="45dip"
        android:layout_marginTop="2dip"
        android:paddingTop="10dp"
        android:paddingBottom="10dip"
        />

    <TextView
        android:visibility="gone"
        android:layout_marginTop="10dip"
        android:gravity="right"
        android:textSize="12sp"
        android:layout_marginRight="22dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="忘记密码？"
        />

    <Button
        android:clickable="true"
        android:onClick="netRegister"
        android:id="@+id/id_btn_register"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:layout_marginTop="20dip"
        android:paddingTop="10dp"
        android:paddingBottom="10dip"
        android:background="@drawable/btn_nor_down"
        android:layout_below="@+id/id_rel22"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="确认"
        android:textColor="@color/white"
        />

</LinearLayout>