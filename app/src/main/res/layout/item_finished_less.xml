<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
<RelativeLayout
    android:id="@+id/rl_goto_delivery_table"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginBottom="16dp"
    android:background="@drawable/border_line"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_item_finish_delivery_number"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:text="出库单号 1654120001"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
    android:id="@+id/tv_item_finish_delivery_date"
    android:layout_below="@+id/tv_item_finish_delivery_number"
    android:layout_marginTop="8dp"
    android:layout_marginLeft="16dp"
    android:text="出库日期:2017/03/06"
    android:textColor="@color/text_color"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_below="@+id/tv_item_finish_delivery_date"
        android:layout_width="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_item_finish_delivery_price"

            android:layout_marginTop="8dp"
            android:layout_marginLeft="16dp"
            android:text="价格：1350元"
            android:textColor="@color/theme_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_item_finish_delivery_amount"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="16dp"
            android:text="数量：2件"
            android:textColor="@color/text_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
  <TextView
      android:text="查看出库单"
      android:layout_marginLeft="16dp"
      android:layout_centerVertical="true"
     android:layout_toLeftOf="@+id/iv_item_goto_delivery"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/iv_item_goto_delivery"
        android:padding="10dp"
        android:layout_marginRight="8dp"
        android:src="@drawable/icon_right"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
</LinearLayout>