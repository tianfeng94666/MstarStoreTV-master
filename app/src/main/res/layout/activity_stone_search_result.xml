<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/rl_stone_search_result"
    android:layout_height="match_parent"
    android:background="@color/theme_bg"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/theme_bg"
        android:orientation="vertical">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/id_rel_title"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="@drawable/title_shadow_style"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/id_ig_back"
                android:layout_width="65dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dip"
                android:layout_marginLeft="6dip"
                android:layout_marginTop="5dip"
                android:onClick="onBack"
                android:padding="10dip"
                android:src="@drawable/icon_return" />

            <TextView
                android:id="@+id/title_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="我是标题栏"
                android:textColor="@color/text_color"
                android:textSize="@dimen/setting_textsize" />

            <TextView
                android:id="@+id/tv_right"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="5dip"
                android:layout_marginRight="16dip"
                android:layout_marginTop="5dip"
                android:gravity="center"
                android:padding="10dip"
                android:text="横竖屏切换"
                android:textColor="@color/text_color" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_search_target"
            android:layout_width="match_parent"
            android:layout_height="@dimen/itme_height"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:textSize="@dimen/text_size_medium1"
            android:textColor="@color/text_color" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.82">


            <LinearLayout
                style="@style/padding_parent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_ischeck_stone"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:background="@drawable/table_head"
                        android:gravity="center"
                        android:textSize="@dimen/text_size_medium1"
                        android:text="勾选" />

                    <TextView
                        android:id="@+id/tv_item_weight"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="@dimen/itme_height"
                        android:background="@drawable/table_head"
                        android:drawableRight="@drawable/icon_sort"
                        android:gravity="center"
                        android:paddingRight="4dp"
                        android:textSize="@dimen/text_size_medium1"
                        android:text="克拉" />

                    <TextView
                        android:id="@+id/tv_item_price"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="@dimen/itme_height"
                        android:background="@drawable/table_head"
                        android:drawableRight="@drawable/icon_sort"
                        android:gravity="center"
                        android:paddingRight="4dp"
                        android:textSize="@dimen/text_size_medium1"
                        android:text="价格" />

                    <TextView
                        android:id="@+id/tv_item_shape"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:textSize="@dimen/text_size_medium1"
                        android:layout_height="@dimen/itme_height"
                        android:background="@drawable/table_head"
                        android:gravity="center"
                        android:text="形状" />

                    <TextView
                        android:id="@+id/tv_item_color"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:textSize="@dimen/text_size_medium1"
                        android:layout_height="@dimen/itme_height"
                        android:background="@drawable/table_head"
                        android:gravity="center"
                        android:text="颜色" />

                    <TextView
                        android:id="@+id/tv_item_purity"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:textSize="@dimen/text_size_medium1"
                        android:layout_height="@dimen/itme_height"
                        android:background="@drawable/table_head"
                        android:gravity="center"
                        android:text="净度" />

                    <TextView
                        android:id="@+id/tv_item_cut"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:textSize="@dimen/text_size_medium1"
                        android:layout_height="@dimen/itme_height"
                        android:background="@drawable/table_head"
                        android:gravity="center"
                        android:text="切工" />

                    <TextView
                        android:id="@+id/tv_item_polish"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:textSize="@dimen/text_size_medium1"
                        android:layout_height="@dimen/itme_height"
                        android:background="@drawable/table_head"
                        android:gravity="center"
                        android:text="抛光" />

                    <TextView
                        android:id="@+id/tv_item_symmetric"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:textSize="@dimen/text_size_medium1"
                        android:layout_height="@dimen/itme_height"
                        android:background="@drawable/table_head"
                        android:gravity="center"
                        android:text="对称" />

                    <TextView
                        android:id="@+id/tv_item_fluorescence"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:textSize="@dimen/text_size_medium1"
                        android:layout_height="@dimen/itme_height"
                        android:background="@drawable/table_head"
                        android:gravity="center"
                        android:text="荧光" />

                    <TextView
                        android:id="@+id/tv_item_certauth"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:textSize="@dimen/text_size_medium1"
                        android:layout_height="@dimen/itme_height"
                        android:background="@drawable/table_head"
                        android:gravity="center"
                        android:text="证书" />

                    <TextView
                        android:id="@+id/tv_item_cerauth_number"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:textSize="@dimen/text_size_medium1"
                        android:layout_height="@dimen/itme_height"
                        android:background="@drawable/table_head"
                        android:gravity="center"
                        android:text="证书号" />

                    <TextView
                        android:id="@+id/tv_item_quoted_price"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:textSize="@dimen/text_size_medium1"
                        android:layout_height="@dimen/itme_height"
                        android:background="@drawable/table_head"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/theme_color" />
                </LinearLayout>


                <com.qx.mstarstoretv.viewutils.xListView.XListView
                    android:id="@+id/lv_stone"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:descendantFocusability="blocksDescendants"
                    android:layout_height="match_parent"
                    android:divider="@null"
                    android:scrollbars="none">

                </com.qx.mstarstoretv.viewutils.xListView.XListView>

                <TextView
                    android:id="@+id/tv_empty"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="暂无数据"
                    android:visibility="gone" />
            </LinearLayout>


            <LinearLayout
                android:layout_marginBottom="16dp"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_pager_amount"
                    android:text="1"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:background="@drawable/border_gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </RelativeLayout>


        <LinearLayout
            android:id="@+id/ll_from_search"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="0.01"
            android:background="@color/theme_bg"
            android:visibility="visible">

            <TextView
                android:id="@+id/tv_reset"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="16dp"
                android:layout_weight="0.4"
                android:drawableLeft="@drawable/ic_refresh"
                android:drawablePadding="4dp"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:textSize="@dimen/setting_textsize"
                android:text="重置选中"
                android:textColor="@color/text_color" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5" />

            <TextView
                android:id="@+id/tv_quoted_price_all"
                style="@style/margin_parent"
                android:layout_width="0dp"
                android:layout_marginBottom="5dp"
                android:maxWidth="220dp"
                android:layout_marginTop="5dp"
                android:layout_height="match_parent"
                android:textSize="@dimen/setting_textsize"
                android:layout_gravity="center_vertical|right"
                android:layout_marginRight="-8dp"
                android:layout_weight="0.3"
                android:background="@drawable/corners_red_bg"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="批量报价"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv_choose_product"
                style="@style/margin_parent"
                android:layout_width="0dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical|right"
                android:layout_marginRight="-8dp"
                android:layout_weight="0.3"
                android:maxWidth="220dp"
                android:background="@drawable/corners_red_bg"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="选择戒托"
                android:textSize="@dimen/setting_textsize"
                android:textColor="@color/white" />
            <TextView
                android:id="@+id/tv_place_order"
                style="@style/margin_parent"
                android:layout_width="0dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="16dp"
                android:layout_weight="0.3"
                android:maxWidth="220dp"
                android:background="@drawable/corners_red_bg"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:textSize="@dimen/setting_textsize"
                android:text="下单"
                android:textColor="@color/white" />


            <TextView
                android:id="@+id/tv_confirm_reback"
                style="@style/margin_parent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="16dp"
                android:layout_weight="0.3"
                android:background="@drawable/corners_red_bg"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="确定"
                android:maxWidth="220dp"
                android:textSize="@dimen/setting_textsize"
                android:textColor="@color/white"
                android:visibility="gone" />
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/ll_confirm_stone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="0.01"
            android:background="@color/theme_bg"
            android:visibility="gone">



            <TextView
                android:id="@+id/tv_reset2"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="16dp"
                android:drawableLeft="@drawable/ic_refresh"
                android:drawablePadding="4dp"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:textSize="@dimen/setting_textsize"
                android:text="重置选中"
                android:textColor="@color/text_color" />


            <TextView
                android:id="@+id/tv_comfirm_stone"
                style="@style/margin_parent"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="16dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/corners_red_bg"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="确定"
                android:textSize="@dimen/setting_textsize"
                android:textColor="@color/white"
                android:visibility="visible" />
        </RelativeLayout>
    </LinearLayout>
    <include layout="@layout/btn_popupwindow"
        android:visibility="gone"/>
    </RelativeLayout>

