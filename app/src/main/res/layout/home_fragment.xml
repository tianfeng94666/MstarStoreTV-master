<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_bg"
            android:fillViewport="true"
    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

    <RelativeLayout
        android:orientation="vertical"
        style="@style/layout_vertical"
        android:layout_weight="0.38"
        android:background="@drawable/img_home_title"
        >
        <TextView
            android:layout_gravity="top"
            android:textColor="@color/white"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="15dp"
            android:text="@string/app_version_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/id_ig_setting"
            android:padding="10dip"
            android:layout_margin="5dip"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/icon_seting"
            />
        <ImageView
            android:id="@+id/id_ig_stone"
            android:padding="10dip"
            android:layout_margin="5dip"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:src="@drawable/icon_seting"
            />


        <com.qx.mstarstoretv.viewutils.CircleImageView
            android:layout_centerInParent="true"
            android:id="@+id/id_ig_icon"
            android:layout_width="80dip"
            android:layout_height="80dip"
            android:src="@drawable/icon_setting_down"
            />


        <TextView
            android:layout_below="@+id/id_ig_icon"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dip"
            android:id="@+id/id_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="小千禧"
            />

        <TextView
            android:layout_marginTop="7dip"
            android:layout_below="@+id/id_tv_name"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/frame_bg_red"
            android:text="定制用户"
            android:textSize="12sp"
            android:textColor="@color/white"
            />
        </RelativeLayout>


    <com.qx.mstarstoretv.viewutils.CustomGridView
        android:id="@+id/id_gv_menu"
        style="@style/layout_vertical"
        android:layout_weight="0.62"
        android:layout_marginTop="15dp"
        android:numColumns="4"
        android:scrollbars="none"
        />

    </LinearLayout>
</ScrollView>