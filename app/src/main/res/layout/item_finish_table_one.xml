<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rl_goto_finish_more"
        style="@style/padding_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:paddingTop="8dp">

        <TextView
            android:id="@+id/tv_finish_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="结算单号：1654120001"
            android:textColor="@color/text_deep_color" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@+id/ib_right"
            android:text="查看结算单" />

        <ImageView
            android:id="@+id/ib_right"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_right" />
    </RelativeLayout>

    <View
        android:layout_marginLeft="16dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_line" />
    <LinearLayout
        android:paddingTop="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_finish_customer_name"
            android:text="客户名称：广西南宁南宁百货HK专柜"
            android:textColor="@color/text_deep_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:textSize="13sp"
        android:paddingLeft="16dp"
        android:id="@+id/tv_number"
        android:text="下单日期：201703001"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:paddingLeft="16dp"
        android:textSize="13sp"
        android:id="@+id/tv_finish_date"
        android:text="结算日期：2017/03/01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:paddingLeft="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="12sp"
            android:id="@+id/tv_finish_quality"
            android:text="成色：STK 铂金"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_toRightOf="@+id/tv_finish_quality"
            android:layout_marginLeft="32dp"
            android:textSize="12sp"
            android:id="@+id/tv_finish_amount"
            android:text="数量：2件"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textSize="13sp"
            android:id="@+id/tv_finish_sum_money_tv"
            android:text="合计金额："
            android:layout_toLeftOf="@+id/tv_finisSh_sum_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="13sp"
            android:paddingRight="16dp"
            android:id="@+id/tv_finisSh_sum_money"
            android:layout_alignParentRight="true"
            android:textColor="@color/theme_color"
            android:text="¥2011.1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <ListView
        android:layout_marginTop="16dp"
        android:id="@+id/lv_sending_tables"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></ListView>
</LinearLayout>