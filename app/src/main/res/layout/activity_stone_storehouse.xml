<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/id_rel_title"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@drawable/title_shadow_style"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/id_ig_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="6dip"
            android:layout_marginTop="5dip"
            android:layout_marginBottom="5dip"
            android:onClick="onBack"
            android:padding="10dip"

            android:src="@drawable/icon_return" />

        <TextView
            android:id="@+id/title_text"
            android:textSize="18sp"
            android:textColor="@color/text_color"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="" />
        <TextView
            android:id="@+id/tv_right"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dip"
            android:layout_marginTop="5dip"
            android:layout_marginBottom="5dip"
           android:gravity="center"
           android:text="历史订单"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/id_rel_title"
        android:layout_marginBottom="40dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_certificate_orgnization"
                style="@style/margin_topAndBottom"
                android:layout_width="match_parent"
                android:layout_height="@dimen/standard_height"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="16dp"
                    android:text="证书机构"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_small_medium" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2" />

                <TextView
                    android:id="@+id/tv_certificate_1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/corners_white_bg"
                    android:gravity="center"
                    android:padding="4dp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.35" />

                <TextView
                    android:id="@+id/tv_certificate_2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="4dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/corners_white_bg"
                    android:gravity="center"
                    android:padding="4dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_line" />

            <LinearLayout
                style="@style/padding_parent"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"

                android:orientation="horizontal"
                android:visibility="visible">

                <TextView
                    android:id="@+id/tv_add_spot"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:src="@drawable/icon_acc"
                    android:text="加点"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_small_medium" />

                <ImageView
                    android:id="@+id/iv_reduce"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="2dp"
                    android:layout_weight="1"
                    android:src="@drawable/icon_acc" />

                <EditText
                    android:id="@+id/et_spot"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="2dp"
                    android:layout_weight="1.5"
                    android:background="@color/white"
                    android:button="@null"
                    android:gravity="center"
                    android:inputType="numberDecimal"
                    android:text="0"
                    android:textSize="@dimen/text_size_small_medium" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="4dp"
                    android:gravity="center"
                    android:text="%" />

                <ImageView
                    android:id="@+id/iv_add"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/icon_add" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/standard_height"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="钻石重量(克拉)"
                    android:textSize="@dimen/text_size_small_medium" />

                <TextView
                    android:id="@+id/tv_weight_min"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="0.1"
                    android:textColor="@color/theme_color"
                    android:textSize="@dimen/text_size_small_medium" />

                <TextView
                    android:id="@+id/tv_weight_max"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16dp"
                    android:text="-10"
                    android:textColor="@color/theme_color"
                    android:textSize="@dimen/text_size_small_medium" />

            </LinearLayout>

            <com.qx.mstarstoretv.viewutils.RangeSeekBar
                android:id="@+id/sb_weight"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="5dp"
                app:cellMode="number"
                app:lineColorEdge="@color/theme_bg"
                app:lineColorSelected="@android:color/holo_red_dark"
                app:max="10"
                app:min="0.1"
                app:seekBarHeight="4dp"
                app:seekBarMode="range"
                app:seekBarResId="@drawable/seekbar_thumb"
                app:thumbPrimaryColor="@android:color/white"
                app:thumbSecondaryColor="@android:color/holo_red_dark"
                app:thumbSize="35dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/standard_height"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="价格范围(元)"
                    android:textSize="@dimen/text_size_small_medium" />

                <TextView
                    android:id="@+id/tv_price_min"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="500"
                    android:textColor="@color/theme_color"
                    android:textSize="@dimen/text_size_small_medium" />

                <TextView
                    android:id="@+id/tv_price_max"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16dp"
                    android:text="-1000"
                    android:textColor="@color/theme_color"
                    android:textSize="@dimen/text_size_small_medium" />

            </LinearLayout>

            <com.qx.mstarstoretv.viewutils.RangeSeekBar
                android:id="@+id/sb_price"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="5dp"
                app:cellMode="number"
                app:lineColorEdge="@color/theme_bg"
                app:lineColorSelected="@android:color/holo_red_dark"
                app:max="1000"
                app:min="500"
                app:seekBarHeight="4dp"
                app:seekBarMode="range"
                app:seekBarResId="@drawable/seekbar_thumb"
                app:thumbPrimaryColor="@android:color/white"
                app:thumbSecondaryColor="@android:color/holo_red_dark"
                app:thumbSize="35dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_line" />

            <LinearLayout
                android:id="@+id/ll_shape"
                style="@style/margin_topAndBottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:text="形状"
                    android:textColor="@color/text_color" />
            </LinearLayout>

            <com.qx.mstarstoretv.viewutils.CustomGridView
                android:id="@+id/gv_shape"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:horizontalSpacing="4dp"
                android:isScrollContainer="false"
                android:numColumns="5"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:scrollbars="none"
                android:verticalSpacing="4dp"></com.qx.mstarstoretv.viewutils.CustomGridView>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_line" />

            <LinearLayout
                android:id="@+id/ll_color"
                style="@style/margin_topAndBottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:text="颜色"
                    android:textColor="@color/text_color" />

                <TextView
                    android:id="@+id/tv_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:textColor="@color/theme_color" />

            </LinearLayout>

            <GridView
                android:id="@+id/gv_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:horizontalSpacing="4dp"
                android:isScrollContainer="false"
                android:numColumns="7"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:scrollbars="none"
                android:verticalSpacing="4dp"></GridView>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_line" />

            <LinearLayout
                android:id="@+id/ll_quality"
                style="@style/margin_topAndBottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:text="净度"
                    android:textColor="@color/text_color" />

                <TextView
                    android:id="@+id/tv_quality"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:textColor="@color/theme_color" />
            </LinearLayout>


            <GridView
                android:id="@+id/gv_quality"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:horizontalSpacing="4dp"
                android:isScrollContainer="false"
                android:numColumns="5"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:scrollbars="none"
                android:verticalSpacing="4dp"></GridView>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_line" />

            <ListView
                android:id="@+id/lv_others"
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:divider="@color/color_line"
                android:dividerHeight="1dp"></ListView>
        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/tv_search"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/theme_color"
            android:gravity="center"
            android:text="查询"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv_reset"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/gray"
            android:gravity="center"
            android:text="重置"
            android:textColor="@color/black" />

    </LinearLayout>


</RelativeLayout>