<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".activity.MainActivity">



        <com.qx.mstarstoretv.viewutils.FlyBanner
            android:id="@+id/fly_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </com.qx.mstarstoretv.viewutils.FlyBanner>
    <LinearLayout
        android:id="@+id/ll_banner"
        android:background="#a0000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:orientation="horizontal">
    </LinearLayout>


    <ImageView
        android:id="@+id/iv_ring_stone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/iv_stone_ring"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:src="@drawable/ring_stone"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_stone_ring"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ll_main"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:src="@drawable/stone_ring"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/ll_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="32dp"
        android:gravity="center">

        <TextView
            android:id="@+id/iv_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@mipmap/home"
            android:gravity="center"
            android:shadowColor="@color/black"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="3"
            android:padding="10dp"
            android:text="快速定制"
            android:textSize="@dimen/text_size_medium1"
            android:textColor="@color/white" />


        <TextView
            android:id="@+id/iv_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:drawableTop="@mipmap/product"
            android:gravity="center"
            android:padding="10dp"
            android:text="产品"
            android:shadowColor="@color/black"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="3"
            android:textSize="@dimen/text_size_medium1"
            android:textColor="@color/white" />
        <TextView
            android:id="@+id/iv_making"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:drawableTop="@mipmap/person_making"
            android:gravity="center"
            android:shadowColor="@color/black"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="3"
            android:padding="10dp"
            android:text="个性定制"
            android:textSize="@dimen/text_size_medium1"
            android:textColor="@color/white"  />
        <TextView
            android:id="@+id/iv_stone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:drawableTop="@mipmap/stone"
            android:gravity="center"
            android:shadowColor="@color/black"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="3"
            android:padding="10dp"
            android:textSize="@dimen/text_size_medium1"
            android:text="裸石库"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/iv_mine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:drawableTop="@mipmap/mine"
            android:gravity="center"
            android:padding="10dp"
            android:shadowColor="@color/black"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="3"
            android:textSize="@dimen/text_size_medium1"
            android:text="个人中心"
            android:textColor="@color/white" />
    </LinearLayout>
    <include layout="@layout/btn_popupwindow"
        android:visibility="gone"/>
    <TextView
        android:background="@drawable/frame_bg_gray"
        android:text="显示金价"
        android:layout_marginRight="10dp"
        android:padding="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/tv_show_gold"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:background="@drawable/frame_bg_gray"
        android:text="广告视频"
        android:padding="10dp"
        android:layout_toLeftOf="@id/tv_show_gold"
     android:layout_marginRight="16dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/tv_show_video"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:background="@drawable/frame_bg_gray"
        android:text="广告图片"
        android:padding="10dp"
        android:layout_toLeftOf="@id/tv_show_video"
        android:layout_marginRight="16dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/tv_show_pics"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:background="@drawable/frame_bg_gray"
        android:text="产品轮播"
        android:padding="10dp"
        android:layout_toLeftOf="@id/tv_show_pics"
        android:layout_marginRight="16dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/tv_product_pics"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
