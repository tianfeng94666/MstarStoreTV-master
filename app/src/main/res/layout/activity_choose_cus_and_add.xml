<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_choose_cus_and_add"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include layout="@layout/title_layout"/>
        <include layout="@layout/layout_adressfor_confir" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/color_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dip"
            android:background="@color/white"
            android:orientation="vertical">


            <LinearLayout
                style="@style/layout_vertical"
                android:layout_marginLeft="@dimen/margin10"
                android:layout_marginRight="@dimen/margin10"
                android:layout_marginTop="@dimen/margin5"
                android:layout_weight="1"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="客       户"
                    android:textColor="@color/black"
                    android:textSize="@dimen/setting_textsize" />


                <RelativeLayout
                    android:id="@+id/id_rl1"
                    style="@style/layout_horizontal"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dip"
                    android:layout_marginRight="@dimen/margin10"
                    android:layout_weight="1"
                    android:background="@drawable/frame_bg_while">

                    <EditText
                        android:id="@+id/id_et_seach"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:singleLine="true"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_size_medium1"/>

                    <View
                        android:id="@+id/id_view_line"
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:layout_toLeftOf="@+id/ig_btn_seach"
                        android:background="@color/color_line"></View>
                    <ImageView
                        android:id="@+id/iv_delete"
                        android:padding="12dp"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="8dp"
                        android:layout_toLeftOf="@+id/id_view_line"
                        android:layout_centerVertical="true"
                        android:src="@drawable/icon_close" />
                    <ImageView
                        android:id="@+id/ig_btn_seach"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:padding="8dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/icon_search"/>
                </RelativeLayout>

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_marginBottom="@dimen/margin5"
                android:layout_marginTop="@dimen/margin5"
                android:background="@color/color_line" />

            <LinearLayout
                style="@style/layout_vertical"
                android:layout_marginBottom="@dimen/margin5"
                android:layout_marginLeft="@dimen/margin10"
                android:layout_marginRight="@dimen/margin10"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="备       注"
                    android:textColor="@color/black"
                    android:textSize="@dimen/setting_textsize"  />

                <EditText
                    android:id="@+id/id_ed_remarks"
                    style="@style/layout_horizontal"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dip"
                    android:layout_marginRight="15dip"
                    android:layout_weight="1"
                    android:background="@drawable/frame_bg_while"
                    android:button="@null"
                    android:textSize="@dimen/setting_textsize"  />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:id="@+id/ll_confirm_stone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="0.01"
        android:background="@color/theme_bg"
        android:visibility="visible">





        <TextView
            android:id="@+id/tv_comfirm"
            style="@style/margin_parent"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="16dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/corners_red_bg"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="确定"
            android:textSize="@dimen/setting_textsize"
            android:textColor="@color/white"
            android:visibility="visible" />
    </RelativeLayout>
    <include layout="@layout/btn_popupwindow" />
</RelativeLayout>