<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    >



    <LinearLayout
        style="@style/layout_vertical"
        android:layout_weight="1.3"
        android:orientation="vertical"
        android:background="@drawable/icon_login_bg"
        >
<TextView
    android:layout_gravity="top"
    android:textColor="@color/white"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="4dp"
    android:text="@string/app_version_detail"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />
    </LinearLayout>


    <LinearLayout
        style="@style/layout_vertical"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/black"
        >


        <LinearLayout
            android:layout_marginTop="@dimen/margin10"
            android:layout_width="match_parent"
            android:layout_height="120dip"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_marginRight="40dip"
            android:layout_marginLeft="40dip"
            android:layout_marginBottom="10dip"
            >


            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@drawable/gradual_line"
                ></View>

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_marginLeft="10dip"
                style="@style/layout_vertical"
                android:layout_weight="1"
                >

                <ImageView
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="20dip"
                    android:src="@drawable/icon_person"
                    android:gravity="center_vertical"
                    android:textColor="@color/white"
                    />
                <View
                    android:layout_width="1px"
                    android:layout_margin="@dimen/margin10"
                    android:layout_height="match_parent"
                    android:background="@color/color_line"
                    />

                <EditText
                    android:hint="用户名"
                    android:textColorHint="@color/white"
                    android:id="@+id/id_ed_name"
                    android:layout_weight="1"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/white"
                    android:singleLine="true"
                    />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@drawable/gradual_line"
                ></View>


            <View
                android:layout_marginTop="5dip"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@drawable/gradual_line"
                ></View>

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_marginLeft="10dip"
                style="@style/layout_vertical"
                android:layout_weight="1"
                >

                <ImageView
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="20dip"
                    android:src="@drawable/icon_pwd"
                    android:gravity="center_vertical"
                    android:textColor="@color/white"
                    />
                <View
                    android:layout_width="1px"
                    android:layout_margin="@dimen/margin10"
                    android:layout_height="match_parent"
                    android:background="@color/color_line"
                    />

                <EditText
                    android:id="@+id/id_ed_password"
                    android:hint="密码"
                    android:textColorHint="@color/white"
                    android:layout_weight="1"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/white"
                    android:inputType="textPassword"
                    android:singleLine="true"
                    />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@drawable/gradual_line"
                />


            <View
                android:id="@+id/line_bottom"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="5dip"
                android:visibility="gone"
                android:background="@drawable/gradual_line"></View>

            <LinearLayout
                android:id="@+id/ll_code"
                android:visibility="gone"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dip"
                style="@style/layout_vertical"
                android:layout_weight="1"
                >

                <ImageView
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="20dip"
                    android:src="@drawable/icon_code"
                    android:gravity="center_vertical"
                    android:textColor="@color/white"
                    />
                <View
                    android:layout_width="1px"
                    android:layout_margin="@dimen/margin10"
                    android:layout_height="match_parent"
                    android:background="@color/color_line"
                    />

                <EditText
                    android:id="@+id/id_ed_code"
                    android:hint="验证码"
                    android:textColorHint="@color/white"
                    android:layout_weight="1"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/white"
                    android:text=""
                    android:singleLine="true"
                    android:inputType="number"
                    />

                <Button
                    android:id="@+id/tv_get_auth_code"
                    android:paddingLeft="15dip"
                    android:paddingRight="15dip"
                    android:layout_marginBottom="5dip"
                    android:layout_marginTop="5dip"
                    android:layout_marginRight="5dip"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="12sp"
                    android:text="获取验证码"
                    android:background="@drawable/frame_bg_while"
                    />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@drawable/gradual_line"
                />
        </LinearLayout>



        <Button
            android:clickable="true"
            android:id="@+id/id_btn_register"
            android:layout_marginLeft="40dip"
            android:layout_marginRight="40dip"
            android:layout_marginTop="25dip"
            android:background="@drawable/icon_btn_lg_bg"
            android:layout_below="@+id/id_lay2"
            android:layout_width="match_parent"
            android:layout_height="45dip"
            android:text="登录"
            android:textColor="@color/white"
            >

        </Button>

    </LinearLayout>


    <LinearLayout
        android:background="@color/black"
        style="@style/layout_vertical"
        android:layout_weight="0.4"
        android:orientation="vertical"

        >

        <RelativeLayout
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="45dip"
            android:layout_marginRight="45dip"
            android:layout_marginTop="2dip"
            android:paddingTop="10dp"
            android:paddingBottom="10dip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            >

            <TextView
                android:clickable="true"
                android:onClick="onRegister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="注册新账户"
                android:textSize="15sp"
                android:layout_alignParentLeft="true"
                android:textColor="@color/white"
                />

            <TextView
                android:clickable="true"
                android:onClick="onUpdatePassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textSize="15sp"
                android:text="忘记密码"
                android:layout_alignParentRight="true"
                android:textColor="@color/white"
                />
        </RelativeLayout>
</LinearLayout>




</LinearLayout>