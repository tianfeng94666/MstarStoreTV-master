<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_bg"
    android:orientation="vertical"
    >


    <include layout="@layout/title_layout"/>



    <LinearLayout
        android:layout_marginTop="10dp"
        android:id="@+id/id_rel11"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/simple_styleinfromation_height">

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="@dimen/setting_textsize"
            android:text="手机号码："
            android:gravity="center_vertical"
            />

        <EditText
            android:layout_weight="1"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/text_color3"
            android:singleLine="true"
            android:inputType="number"
            />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/id_rel22"
        android:layout_below="@+id/id_rel11"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/simple_styleinfromation_height"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/id_tv6"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="验  证  码："
            android:textSize="@dimen/setting_textsize" />

        <EditText
            android:layout_weight="1"
            android:id="@+id/if_ed_1"
            android:layout_toRightOf="@+id/id_tv6"
            android:background="@null"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/text_color3"
            android:singleLine="true"
            />

        <Button
            android:layout_toRightOf="@+id/if_ed_1"
            android:paddingLeft="15dip"
            android:paddingRight="15dip"
            android:layout_marginBottom="5dip"
            android:layout_marginTop="5dip"
            android:layout_marginRight="5dip"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="@dimen/text_size_medium1"
            android:text="获取验证码"
            android:background="@drawable/frame_bg_while"
            />

    </LinearLayout>


    <Button
        android:clickable="true"
        android:id="@+id/id_btn_register"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:layout_marginTop="20dip"
        android:paddingTop="10dp"
        android:paddingBottom="10dip"
        android:background="@drawable/btn_nor_down"
        android:layout_below="@+id/id_rel22"
        android:layout_width="match_parent"
        android:textSize="@dimen/setting_textsize"
        android:layout_height="@dimen/simple_styleinfromation_height"
        android:text="确认"
        android:textColor="@color/white"
        />

</LinearLayout>