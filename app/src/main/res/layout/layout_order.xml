<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:descendantFocusability="blocksDescendants"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingLeft="10dip"
    android:paddingRight="10dip">

    <RelativeLayout
        android:id="@+id/item_button_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/itme_height"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="15dip"
        android:gravity="center_vertical">


        <CheckBox
            android:id="@+id/ck_checkone"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:button="@drawable/radio_style"
            android:checked="false"
            android:paddingBottom="8dp"
            android:paddingLeft="10dp"
            android:paddingRight="50dp"
            android:paddingTop="10dp"
            android:textColor="@color/black"
            android:textSize="15sp" />


        <TextView

            android:id="@+id/btn_edit"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/itme_height"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dip"
            android:layout_marginRight="100dp"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@+id/btn_delete"
            android:button="@null"
            android:drawableLeft="@drawable/icon_edit"
            android:gravity="center"
            android:padding="4dp"
            android:text="   编辑"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_medium1" />

        <TextView
            android:id="@+id/btn_delete"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/itme_height"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dip"
            android:layout_marginTop="5dp"
            android:drawableLeft="@drawable/icon_del"
            android:gravity="center"
            android:padding="4dp"
            android:text="    删除"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_medium1"

            />
    </RelativeLayout>

    <View
        android:id="@+id/line"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_below="@id/item_button_layout"
        android:background="@color/color_line" />


    <LinearLayout
        android:id="@+id/id_lay1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="10dip">

        <ImageView
            android:id="@+id/product_img"
            android:layout_width="120dip"
            android:layout_height="120dip"
            android:contentDescription="@string/app_name"
            android:src="@drawable/no_image" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="30dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/product_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="千禧之星裸"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_size_medium1" />

                    <TextView
                        android:id="@+id/id_tv_information"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:lineSpacingExtra="4dp"
                        android:lines="2"
                        android:textColor="@color/text_color3"
                        android:textSize="@dimen/text_size_medium1" />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:gravity="bottom|left"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/product_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="1334"
                        android:textColor="@color/theme_color"
                        android:textSize="@dimen/text_size_medium1" />


                    <TextView
                        android:id="@+id/product_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="25dip"
                        android:text="1" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/id_oder_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="订单类型：钻戒"
                    android:textColor="@color/theme_color"
                    android:visibility="gone" />

            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <View
        android:id="@+id/id_view_line"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_below="@id/id_lay1"
        android:background="@color/color_line" />

    <TextView
        android:id="@+id/product_norms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/id_lay1"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:lines="1"
        android:text="规格"
        android:textColor="@color/text_color"
        android:textSize="@dimen/text_size_medium1" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_below="@id/product_norms"
        android:background="@color/color_line" />

</RelativeLayout>